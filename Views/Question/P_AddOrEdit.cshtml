@model EM_Question

<!-- Modal Header -->
<div class="modal-header">
    <h5 class="modal-title text-gray-900" id="questionModalLabel">
        @if (Model != null)
        {
            <span>Edit question</span>
        }
        else
        {
            <span>Add new question</span>
        }
    </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<!-- Modal Body -->
<div class="modal-body">
    <form id="questionForm" class="needs-validation" method="post" asp-antiforgery="true">
        @if (Model != null)
        {
            <input type="hidden" name="Id" value="@Model.Id" />
        }
        else
        {
            <input type="hidden" name="Id" value="0" />
        }

        <div class="form-row">
            <!-- Type select -->
            <div class="form-group col-md-4">
                <label asp-for="Type" class="text-gray-800">Type</label>
                <select asp-for="Type" class="form-control" required onchange="ToggleTopicDropdown()">
                    <option value="">-- Select type --</option>
                    <option value="Vocabulary">Vocabulary</option>
                    <option value="Grammar">Grammar</option>
                </select>
                <span asp-validation-for="Type"></span>
            </div>

            <!-- Vocabulary Topic select -->
            <div class="form-group col-md-4" id="vocabularyTopicGroup" style="display: none;">
                <label asp-for="VocabularyTopic" class="text-gray-800">Topic</label>
                <select asp-for="VocabularyTopic" asp-items="ViewBag.VocabularyTopics" class="form-control" required>
                    <option value="">-- Select topic --</option>
                </select>
                <span asp-validation-for="VocabularyTopic"></span>
            </div>

            <!-- Grammar Topic select -->
            <div class="form-group col-md-4" id="grammarTopicGroup" style="display: none;">
                <label asp-for="GrammarTopic" class="text-gray-800">Topic</label>
                <select asp-for="GrammarTopic" asp-items="ViewBag.GrammarTopics" class="form-control" required>
                    <option value="">-- Select topic --</option>
                </select>
                <span asp-validation-for="GrammarTopic"></span>
            </div>

            <!-- Level select -->
            <div class="form-group col-md-4">
                <label asp-for="Level" class="text-gray-800">Level</label>
                <select class="form-control" id="difficulty" name="difficulty" required>
                    <option value="">-- Select level --</option>
                    <option value="Beginner">Beginner</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Advanced">Advanced</option>
                </select>
            </div>
        </div>

        <!-- Question text -->
        <div class="form-group">
            <label asp-for="QuestionText" class="text-gray-800">Question text</label>
            <textarea class="form-control" id="questionText" name="questionText" rows="2" placeholder="Enter the question..." required></textarea>
        </div>

        <!-- Explanation -->
        <div class="form-group">
            <label asp-for="QuestionText" class="text-gray-800">Question text</label>
            <textarea class="form-control" id="questionText" name="questionText" rows="2" placeholder="Enter the question..." required></textarea>
        </div>

        <!-- Options -->
        <div class="form-group">
            <label class="text-gray-800">Options</label>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control border-success" name="optionA" placeholder="Option A" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control border-danger" name="optionB" placeholder="Option B" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control border-danger" name="optionC" placeholder="Option C" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control border-danger" name="optionD" placeholder="Option D" required>
                </div>
            </div>
        </div>

    </form>
</div>

<!-- Modal Footer -->
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary" onclick="Submit()">Save Question</button>
</div>